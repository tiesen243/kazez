generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  discordId String @unique

  email    String  @unique
  username String  @unique
  name     String?
  avatar   String

  comments    Comment[]
  savedAnimes SavedAnime[]
  sessions    Session[]

  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime

  user   User   @relation(references: [id], fields: [userId], onDelete: Cascade)
  userId String
}

model Comment {
  id      String @id @default(cuid())
  content String
  animeId String

  user   User   @relation(references: [id], fields: [userId], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
}

model SavedAnime {
  id    String @id
  image String
  title String

  user   User   @relation(references: [id], fields: [userId], onDelete: Cascade)
  userId String
}
